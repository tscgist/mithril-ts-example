{
  "name": "mithril-ts-example-full",
  "version": "0.0.1",
  "description": "Mithril TypeScript Example with testing capability, browser-sync and bootstrap scss support",
  "author": "tscgist",
  "scripts": {
    "serve": "http-server -p 3000 public",
    "compile": "browserify --debug src/main.ts -p [ tsify --project src/tsconfig.json ] -o public/js/app.js",
    "build": "browserify src/main.ts -p [ tsify --project src/tsconfig.json ] | uglifyjs -cm -o public/js/app.js",
    "watch": "watchify -v --debug src/main.ts -p [ tsify --project src/tsconfig.json ] -o public/js/app.js",
    "sync": "browser-sync start -c bs-config.js",
    "dev": "npm-run-all -p watch sync",
    "start": "npm-run-all -p watch serve",
    "clean": "rm -f public/js/app.js"
  },
  "license": "MIT",
  "dependencies": {
    "mithril": "^1.1.3"
  },
  "devDependencies": {
    "@types/mithril": "^1.1.7",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap": "^4.0.0-alpha.6",
    "browserify": "^14.4.0",
    "browser-sync": "^2.18.13",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.0.2",
    "tsify": "^3.0.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "uglify-js": "^2.8.29",
    "watchify": "^3.9.0"
  }
}
